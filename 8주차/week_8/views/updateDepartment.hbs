<h1> {{title}} </h1> <!--Department-->
<table>
    <tr> <!--Department 속성-->
        <td>Dname</td>
        <td>Dnumber</td>
        <td>Mgr_ssn</td>
        <td>Mgr_start_date</td>
    </tr>
    {{#each dept_res}} <!--Department dept_res의 반복하여 출력-->
    <!--form tag 이용-->
        <form method="post">
            <tr>
                <!--input tag를 사용하여 입력 가능한 형태로 변경함 placeholder dname-->
                <td><input type="text" name="dname" placeholder={{Dname}}></td>
                <td>{{Dnumber}}</td>
                <td>{{Mgr_ssn}}</td>
                <td>{{Mgr_start_date}}</td>
                <!--formaction 속성을 활용하여 입력한 값을 넘겨짐-->
                <td><input type="submit" value="수정" formaction="/update/department"></td>
            </tr>
        </form>
    {{/each}}
</table>